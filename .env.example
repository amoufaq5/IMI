# Application
APP_NAME=IMI
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
API_VERSION=v1

# Database - PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/imi_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Neo4j Knowledge Graph
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Vector Database
CHROMADB_HOST=localhost
CHROMADB_PORT=8001
CHROMADB_COLLECTION=medical_embeddings

# LLM Configuration
LLM_MODEL_PATH=/models/meditron-7b
LLM_DEVICE=cuda
LLM_MAX_LENGTH=4096
LLM_TEMPERATURE=0.7
LLM_TOP_P=0.9

# Verifier Model
VERIFIER_MODEL_PATH=/models/medical-verifier
VERIFIER_THRESHOLD=0.85

# HIPAA Compliance
ENCRYPTION_KEY=your-32-byte-encryption-key-here
ENCRYPTION_ALGORITHM=AES-256-GCM
AUDIT_LOG_RETENTION_DAYS=2555
PHI_ANONYMIZATION_ENABLED=true

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
AUDIT_LOG_PATH=/var/log/imi/audit.log

# External APIs
PUBMED_API_KEY=your-pubmed-api-key
FDA_API_KEY=your-fda-api-key

# Medical Imaging
DICOM_STORAGE_PATH=/data/dicom
MAX_IMAGE_SIZE_MB=100

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
OPENTELEMETRY_ENABLED=true
OTLP_ENDPOINT=http://localhost:4317
