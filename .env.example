# UMI Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=UMI
APP_ENV=development
DEBUG=true
API_VERSION=v1
API_PREFIX=/api/v1

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql+asyncpg://umi_user:umi_password@localhost:5432/umi_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
# OpenAI (for development/fallback)
OPENAI_API_KEY=sk-your-openai-key

# Hugging Face
HF_TOKEN=hf_your-huggingface-token
HF_MODEL_CACHE=/app/models

# Local LLM Settings
LLM_MODEL_NAME=mistralai/Mistral-7B-Instruct-v0.2
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7
LLM_USE_GPU=true
LLM_QUANTIZATION=4bit

# Vision Model
VISION_MODEL_NAME=llava-hf/llava-v1.6-mistral-7b-hf
VISION_MAX_IMAGE_SIZE=1024

# =============================================================================
# VECTOR DATABASE (Qdrant)
# =============================================================================
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_PREFIX=umi_

# =============================================================================
# EMBEDDING MODEL
# =============================================================================
EMBEDDING_MODEL=pritamdeka/S-PubMedBert-MS-MARCO
EMBEDDING_DIMENSION=768

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# PubMed
PUBMED_API_KEY=your-pubmed-api-key
PUBMED_EMAIL=your-email@example.com

# DrugBank (if licensed)
DRUGBANK_API_KEY=

# OpenFDA
OPENFDA_API_KEY=

# =============================================================================
# STORAGE
# =============================================================================
# MinIO / S3
STORAGE_TYPE=minio
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=umi-files
MINIO_SECURE=false

# =============================================================================
# CELERY (Task Queue)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# MONITORING
# =============================================================================
# Sentry
SENTRY_DSN=

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/umi/app.log

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_IMAGING_ENABLED=false
FEATURE_PHARMA_ENABLED=true
FEATURE_RESEARCH_ENABLED=false
FEATURE_HOSPITAL_ENABLED=false
